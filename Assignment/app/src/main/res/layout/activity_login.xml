<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.gee.assignment.Login"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="102dp"
        app:srcCompat="@drawable/tarcc_logo"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        app:srcCompat="@drawable/app_logo"
        android:id="@+id/imageView3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp">


        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:id="@+id/btn_login"
            android:layout_alignBaseline="@+id/btn_signup"
            android:layout_alignBottom="@+id/btn_signup"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signup"
            android:layout_marginStart="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="21dp" />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/text_password"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_alignTop="@+id/edit_password"
            android:layout_alignEnd="@+id/btn_signup"
            android:layout_alignBottom="@+id/edit_password" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_email"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/edit_password" />

        <TextView
            android:text="Email"
            android:layout_width="60dp"
            android:id="@+id/text_email"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/edit_email"
            android:layout_alignTop="@+id/edit_email"
            android:layout_alignStart="@+id/text_password"
            android:layout_alignEnd="@+id/text_password" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_password"
            android:layout_width="180dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/btn_login" />
    </RelativeLayout>
</LinearLayout>
